{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@Utils/*": ["src/js/controllers/Utils/*"],
            "@Controllers/*": ["src/js/Controllers/*"],
            "@GameObjects/*": ["src/js/GameEngine/GameObjects/*"],
            "@js/*": ["src/js/*"]
        }
    },
    "exclude": [
        "node_modules/*", "story/*", "dist/*", ".github/*", ".vscode/*", "vendor/*"
    ]
}